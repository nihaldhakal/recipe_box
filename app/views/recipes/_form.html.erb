<%= simple_form_for @recipe, html: { multipart: true } do |form| %>
  <div class="multipart">
    <div class="field">
      <%= form.label :title %>
      <%= form.text_area :title %>
    </div>
    <div class="field">
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>
    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image %>
    </div>
    <row>
      <col-md-6>
        <h3>Ingredients</h3>
        <div id="ingredients">
          <%= form.simple_fields_for :ingredients do |ingredient| %>
            <%= render 'ingredients_field', form: ingredient %>
            <div class="links">
              <%= link_to_add_association 'Add Ingredients',form, :ingredients %>
            </div>
          <% end %>
        </div>
      </col-md-6>
    </row>
    <div class="action">
      <%= submit_tag "Create", data:'#{@recipe.new_record?}'  %>
    </div>
  </div>
<% end %>


<%= link_to 'Home', recipes_path %>